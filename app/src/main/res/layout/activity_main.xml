<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="software.unf.dk.simonsaysworkingproject.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/greenButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="83dp"
            android:layout_marginStart="83dp"
            android:layout_marginTop="137dp"
            android:background="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/orangeButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/greenButton"
            android:layout_toEndOf="@+id/greenButton"
            android:layout_toRightOf="@+id/greenButton"
            android:background="@android:color/holo_orange_dark"
            android:onClick="orange" />

        <Button
            android:id="@+id/redButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/greenButton"
            android:layout_toLeftOf="@+id/blueButton"
            android:layout_toStartOf="@+id/blueButton"
            android:background="@android:color/holo_red_dark"
            android:onClick="red" />

        <Button
            android:id="@+id/blueButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/orangeButton"
            android:layout_toRightOf="@+id/greenButton"
            android:background="@android:color/holo_blue_dark"
            android:onClick="blue" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

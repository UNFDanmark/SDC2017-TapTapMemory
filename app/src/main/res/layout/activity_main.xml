<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="software.unf.dk.simonsaysworkingproject.MainActivity"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:text="0 POINTS"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/blueButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/orangeButton"
            android:layout_toRightOf="@+id/greenButton"
            android:background="@android:color/holo_blue_dark"
            android:onClick="save4" />

        <Button
            android:id="@+id/redButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/greenButton"
            android:layout_toLeftOf="@+id/blueButton"
            android:layout_toStartOf="@+id/blueButton"
            android:background="@android:color/holo_red_dark"
            android:onClick="save3" />

        <Button
            android:id="@+id/orangeButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/greenButton"
            android:layout_toEndOf="@+id/greenButton"
            android:layout_toRightOf="@+id/greenButton"
            android:background="@android:color/holo_orange_dark"
            android:onClick="save2" />

        <Button
            android:id="@+id/greenButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_green_dark"
            android:onClick="save1" />


        <Button
            android:id="@+id/startButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/redButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="start"
            android:text="Start"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/highScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startButton"
            android:layout_centerHorizontal="true"
            android:text="High Score: 0"
            android:textStyle="bold" />


    </RelativeLayout>


    <ImageButton
        android:id="@+id/startActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/darker_gray"
        android:onClick="menu"
        app:srcCompat="@android:drawable/ic_menu_add" />

</RelativeLayout>
